{
  "manifest_version": 3,
  "name": "ADA Scanner Forwarder",
  "version": "0.4.0",
  "description": "Auto-forwards HTML changes to the ADA scanner listener when enabled.",
  "permissions": ["storage", "activeTab", "tabs"],
  "host_permissions": [
    "http://localhost:*/*",
    "http://127.0.0.1:*/*"
  ],
  "action": {
    "default_title": "Toggle ADA Scanner Forwarder",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["forwarder.js", "highlighter.js", "reportSidebar.js", "tabOrderOverlay.js", "contentScript.js"],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "ada-scanner-forwarder@example.com",
      "strict_min_version": "109.0"
    }
  }
}
