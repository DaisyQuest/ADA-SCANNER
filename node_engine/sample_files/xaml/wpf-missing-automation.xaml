<Window x:Class="SampleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sample" Height="450" Width="800">
  <Grid>
    <StackPanel Margin="24">
      <TextBlock Text="Profile" FontSize="24" />

      <!-- TextBox without associated Label or AutomationProperties.Name -->
      <TextBox x:Name="FirstName" Width="240" Margin="0,8,0,0" />

      <!-- Button with icon only and no AutomationProperties.Name -->
      <Button Width="40" Height="40" Margin="0,12,0,0">
        <Path Data="M2,2 L18,18" Stroke="Black" />
      </Button>

      <!-- Image without AutomationProperties.Name -->
      <Image Source="/Assets/avatar.png" Width="64" Height="64" />
    </StackPanel>
  </Grid>
</Window>
