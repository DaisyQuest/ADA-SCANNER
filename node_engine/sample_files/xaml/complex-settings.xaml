<Page
    x:Class="AdaScanner.SampleFiles.ComplexSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#F7F9FC">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Background="#1E293B" Padding="16">
            <TextBlock Text="System Settings" Foreground="White" FontSize="20" />
            <Button Content="" Width="32" Height="32" Margin="16,0,0,0" />
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <StackPanel Padding="24" Spacing="16">
                <StackPanel>
                    <TextBlock Text="Notifications" FontSize="18" />
                    <ToggleSwitch OffContent="Disabled" OnContent="Enabled" />
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Data retention" FontSize="18" />
                    <ComboBox>
                        <ComboBoxItem Content="30 days" />
                        <ComboBoxItem Content="90 days" />
                    </ComboBox>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Contact email" FontSize="18" />
                    <TextBox PlaceholderText="name@company.com" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Button Content="Save changes" />
                    <Button Content="Reset" Background="#CBD5F5" Foreground="#CBD5F5" />
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Advanced" FontSize="18" />
                    <TextBlock Text="Enable experimental features" />
                    <CheckBox />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
